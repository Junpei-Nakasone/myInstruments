<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        楽器詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @instrument, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @instrument.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>１週間の貸し出し値段</th>
                </tr>
                <tr>
                  <td><%=  @instrument.price %>円</td>
                </tr>
                <tr>
                  <th>楽器の説明</th>
                </tr>
                <tr>
                  <td><%= simple_format @instrument.description %></td>
                </tr>
              </table>
              <% if @instrument.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_instrument_path(@instrument), class: "button is-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            By <%= @instrument.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @instrument.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@instrument.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @instrument.user.username %> さんのページへ
          <%= attachment_image_tag @instrument.user, :profile_image, fallback: "no-image.png", class: "profile_image" %>
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>
