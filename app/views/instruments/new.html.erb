<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規楽器登録
      </h1>
    </div>
  </div>
</section>


<% if @instrument.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@instrument.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @instrument.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @instrument do |f| %>
          <div class="field">
            <%= f.label :title, "楽器名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :description, "説明", class: "label" %>
            <%= f.text_area :description, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :price, "貸し出し値段", class: "label" %>
            <%= f.text_field :price, class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
